# Example .env.production file
# Copy this to .env and update values for production deployment

RAILS_ENV=production

# Rails Configuration
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=false

# Database
POSTGRES_USER=rails_prod_user
POSTGRES_PASSWORD=very_secure_password_generate_strong_one
POSTGRES_DB=rails_production
DATABASE_URL=postgresql://rails_prod_user:very_secure_password_generate_strong_one@db:5432/rails_production

# Redis
REDIS_URL=redis://redis:6379/0

# Secret Key Base (generate with: rails secret)
SECRET_KEY_BASE=generate_long_random_string_with_rails_secret

# Sidekiq
SIDEKIQ_CONCURRENCY=10

# Optional Services
# SENTRY_DSN=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_BUCKET=

# SMTP Configuration (if using email)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
