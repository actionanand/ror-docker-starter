# Rails Configuration
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Rails Master Key (generate with: rails secret)
# RAILS_MASTER_KEY=your_master_key_here

# Redis Configuration
REDIS_URL=redis://redis:6379/1

# Database Configuration
POSTGRES_USER=rails_user
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=rails_development
DATABASE_URL=postgresql://rails_user:secure_password_change_me@db:5432/rails_development

# Secret Key Base (generate with: rails secret)
SECRET_KEY_BASE=change_me_with_rails_secret_output

# Sidekiq Configuration
SIDEKIQ_CONCURRENCY=5

# Optional: Sentry
# SENTRY_DSN=your_sentry_dsn_here

# Optional: AWS S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_BUCKET=
